{
  "manifest_version": 3,
  "name": "AI Popup Infopedia",
  "version": "6.1",
  "description": "Select a word to get an AI-powered explanation.",
  "permissions": [
    "storage",
    "scripting",
    "alarms"
  ],
  "commands": {
    "trigger-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Trigger AI Popup for selected text"
    }
  },
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "http://localhost:11434/",
    "http://localhost:8765/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "AI Popup Infopedia Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}